# Hasgeek code style config
root = True

# For all files
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 88
tab_width = 8
trim_trailing_whitespace = true

# Python code
[*.py]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab
indent_size = tab

# Markdown
[*.{md,md.jinja2}]
trim_trailing_whitespace = false
